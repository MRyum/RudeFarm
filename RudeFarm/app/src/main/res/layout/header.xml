<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="#F2F2F2">

    <RelativeLayout
        android:id="@+id/profil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="40dp"
            android:src="@mipmap/main_menu_picture" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/profile_img"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/profile_img"
            android:text="유예권"
            android:textColor="#565560"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/profile_img"
            android:text="yyg8291@naver.com"
            android:textColor="#565560"
            android:textSize="10dp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_below="@+id/profil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/point"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:gravity="right|center_vertical"
            android:paddingRight="25dp"
            android:textColor="#565560"
            android:textSize="15dp" />

        <TextView
            android:background="@drawable/border_left"
            android:id="@+id/percent"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/point"
            android:gravity="center_vertical|right"
            android:paddingLeft="25dp"
            android:paddingRight="10dp"
            android:textColor="#565560"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/percent_exp"
            android:layout_width="80dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_below="@+id/percent"
            android:layout_marginLeft="37dp"
            android:layout_toRightOf="@+id/point_exp"
            android:text="달성률"
            android:textColor="#565560"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/point_exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/point"
            android:layout_marginLeft="55dp"
            android:text="포인트"
            android:textColor="#565560"
            android:textSize="10dp" />

    </RelativeLayout>
</RelativeLayout>