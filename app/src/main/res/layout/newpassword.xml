<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_background">

    <include
        android:id="@+id/fpw_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/fpw_toolbar"/>

    <LinearLayout
        android:id="@+id/newpassword_li"
        android:layout_width="310dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/border_hard"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="새 비밀번호"
            android:textColor="#fff"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/newpassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:inputType="textPassword"
            android:maxLength="30"
            android:singleLine="true"
            android:textColor="#fff"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/confirm_li"
        android:layout_width="310dp"
        android:layout_height="45dp"
        android:layout_below="@+id/newpassword_li"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/border_hard"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="새 비밀번호 확인"
            android:textColor="#fff"
            android:textSize="12dp" />

        <EditText
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:inputType="textPassword"
            android:maxLength="30"
            android:singleLine="true"
            android:textColor="#fff"
            android:textSize="12dp" />
    </LinearLayout>

    <Button
        android:id="@+id/perBtn"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_below="@+id/confirm_li"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="290dp"
        android:background="#131D49"
        android:text="완료"
        android:textColor="#FFFFFF"
        android:textSize="15dp" />
</RelativeLayout>